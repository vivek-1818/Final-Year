<Page x:Class="DeezFiles.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginPage"
        Background="#212121"
        Height="800" Width="1280">

    <Grid VerticalAlignment="Center">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock x:Name="DF" Text="DEEZFILES" FontFamily="Segoe UI" FontSize="36" Foreground="White" FontWeight="Bold" Margin="16,16,16,48" HorizontalAlignment="Center"/>

            <TextBlock Text="Username" FontFamily="Roboto" FontSize="16" Foreground="White" FontWeight="Light" Margin="16,0,0,4"/>
            <TextBox x:Name="Username" Width="290" FontSize="14" FontWeight="Medium" Background="#d9d9d9" Foreground="#212121" Margin="0,0,0,16">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border CornerRadius="2" Background="{TemplateBinding Background}">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <TextBlock Text="Password" FontFamily="Roboto" FontSize="16" Foreground="White" FontWeight="Light" Margin="16,0,0,4"/>
            <PasswordBox x:Name="Password" Width="289" FontSize="14" FontWeight="Medium" Background="#d9d9d9" Foreground="#212121" Margin="0,0,0,10">
                <PasswordBox.Style>
                    <Style TargetType="PasswordBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="PasswordBox">
                                    <Border CornerRadius="2" Background="{TemplateBinding Background}">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </PasswordBox.Style>
            </PasswordBox>

            <TextBlock x:Name="LoginError" Foreground="Red" Margin="0,0,0,16" FontSize="14" FontWeight="Medium" HorizontalAlignment="Center"/>

            <Button Name="LoginButton" Click="LoginButton_Click" Content="Login" FontSize="16" FontWeight="Bold" Background="#c9a9ff" Foreground="#2a2a2a" HorizontalAlignment="Center" Width="75" Height="25" Margin="0,0,0,24">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <TextBlock Text="Don't have an account? Register..." FontSize="12" FontWeight="Normal" Foreground="White" Margin="0,0,0,8" HorizontalAlignment="Center"/>

            <Button Name="RegButton" Click="RegButton_Click" Content="Register" FontSize="16" FontWeight="Bold" Foreground="#c9a9ff" Background="#2a2a2a" HorizontalAlignment="Center" Width="100" Height="30" Margin="0,0,0,24">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="15" Background="{TemplateBinding Background}" BorderBrush="#c9a9ff" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Page>
